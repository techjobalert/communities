.b-upload-item__title
  %b Regular (Movies, Presentations, Documents)

.b-upload-item__uload-regular
  #regular-upcontainer
    .select-file Select File
    .row
      = link_to '#', :id => 'regular-pickfiles', :class => 'light-button green upload' do
        Upload
        %span

      .btn-hint
        It can be presentations,
        %br
        movies and articles.
    .row
      .fl-l#filelist

  - if @a_video
    - if @a_video.file_processing == true
      .attachment-video
        %i
          Your attachment will be placed here after processings
    - elsif not @a_video.nil?
      .attachment-video
        = render :partial => "layouts/video_viewer", :locals => {:attachment => @a_video}

  - if @a_pdf
    - if @a_pdf.file_processing == true
      .attachment-pdf
        %i
          Your attached pdf will be placed here after processings
    - elsif not @a_pdf.blank?
      .attachment-pdf
        = render :partial => "layouts/pdf_viewer", :locals => { :attachment => @a_pdf}

  %p.tools
    - if @item.attachments.blank?
      %span.light-button.green.upload-page-next-step.disabled= raw('Next Step &raquo;')

      = link_to raw('Next Step &raquo;'), edit_item_path(@item, :step=>"additional"), {:class => 'light-button green upload-page-next-step hidden'}
    - else
      = link_to raw('Next Step &raquo;'), edit_item_path(@item, :step=>"additional"), {:class => 'light-button green'}

  %p.help
    Please upload your presentation, movie or article to proceed
:javascript
  $(function(){
    var uploaderAttachment = $.initPlupload({
        url: "#{item_upload_attachment_path(@item)}",
        // filters : [
        //     {title : "Presentation files", extensions : "key,ppt,pptx"},
        //     {title : "Document", extensions : "pdf,doc,docx"},
        //     {title : "Video files", extensions : "3gpp,3gp,mpeg,mpg,mpe,ogv,mov,webm,flv,mng,asx,asf,wmv,avi,mp4,m4v"},
        // ],
        max_file_size: "1000mb",
        browse_button: "regular-pickfiles",
        container: "regular-upcontainer",
        post_data: {attachment_type: "regular"}
    });
  })
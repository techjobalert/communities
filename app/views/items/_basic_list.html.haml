- remote ||= false
- @item ||= false
- if items.present?
  :javascript
    $("#_attachment_type").val("#{items.first.attachment_type}");
  - items.each do |item|
    - if item
      .item
        .media
          = link_to image_tag(item.attachment_thumb, :class => 'popup-item-info', :id => "popup-item-#{item.id}", :width => "265", :height => "200"), item_path(item), :class => " pjax"

        = link_to  item.description.truncate(200, :separator => " "), item_path(item), :class => "text pjax"

  .clear
  - if remote and @item
    = paginate items, :params => {:action => "relevant", :controller => "items", :item_id => @item }, :remote => true
  - else
    = paginate items

- else
  .no-items No items

.clear


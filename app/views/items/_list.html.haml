- if defined? search and search
  %h3 Search

- @content_type ||= 'video'
.list
  .list-header

    .nav
      = link_to root_path(:type => "video"), :class => "movies pjax #{'selected' if @content_type == 'video'}" do
        %span
        Movies
      = link_to root_path(:type => "article"), :class => "articles pjax  #{'selected' if @content_type == 'article'}" do
        %span
        Articles
      = link_to root_path(:type => "presentation"), :class => "presentations pjax  #{'selected' if @content_type == 'presentation'}" do
        %span
        Presentations
    .filter
      .field
        = form_for "", :url => search_items_path, :remote => true, :method => :get do |f|
          .tags.home-filter-form
            .label Sort by
            .filter-form
              %span.viewed= f.select "views", options_for_select(['More Viewed', 'Less Viewed']), :prompt => 'Viewd', :include_blank => true
              %span.identical= f.select "date", options_for_select(['Today', '1 Week', '1 Month', '1 Year']), :prompt => 'Date', :include_blank => true
              %span.identical= f.select "price", options_for_select(['Free', 'Paid']), :prompt => 'Free/Paid', :include_blank => true
              %span.identical= f.select "length", options_for_select(['Length']), :prompt => 'Length', :include_blank => true
              = f.hidden_field "filter_type", :value => "basic"
              = f.hidden_field "attachment_type", :value => "article"
            .clear
          .search
            = f.text_field "q", :value => params[:q] ,:placeholder => 'Free search', :class => 'text-input', :id => "qsearch"
            = f.submit 'Go', :class => 'dark-button'
        :javascript
          $(".filter-form select").chosen();
        .clear
    .clear

    .list-content
      = render :partial => "items/basic_list", :locals => {:items => items}
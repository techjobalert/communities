#change-password.b-user
  .form
    %h1 Change your password
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }, :validate => true) do |f|
      /= devise_error_messages!
      = f.hidden_field :reset_password_token
      .inputs
        %div
          %strong New password:
          = f.password_field :password
        %div
          %strong Confirm new password:
          = f.password_field :password_confirmation
        .submit= f.submit '', :class => 'btn change-password'
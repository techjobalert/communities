!!!
%html
  %head
    %title Orthodontics360
    = stylesheet_link_tag "application", :debug => Rails.env.development?
    = javascript_include_tag "application", :debug => Rails.env.development?
    = csrf_meta_tags
  %body
  
    = content_tag(:div, flash[:error], :id => "flash_error") if flash[:error]
    = content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice]
    = content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert]

    = render :partial => "layouts/ie_fix", :inline => true

    .header
      = render :partial => "pages/general_links", :inline => true
      .b-admin-header.center
        = link_to '', '#', :class => 'b-admin-header-logo'
        %h1.b-admin-header-title Administrator confirmation items

    
    .section.center
      .main-content
        .user-info
          = image_tag '/assets/tmp/p3.png', :width => '70', :height => '70', :alt => 'Yossy Mendelovich . MD', :class => 'popup-user-info'
          %span.title Yossy Mendelovich . MD
        .light-button.sale
          Our Ordothontics Sale
          %span
        .clear
        .panel.no-padding
          = yield


    .l-footer
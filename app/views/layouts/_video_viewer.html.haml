%video{:controls => "controls", :height => "264", :poster => "#{attachment.url}", :preload => "none", :width => "435"}
  / MP4 for Safari, IE9, iPhone, iPad, Android, and Windows Phone 7
  %source{:src => "#{attachment.url}", :type => "video/mp4"}/
  / WebM/VP8 for Firefox4, Opera, and Chrome
  / %source{:src => "myvideo.webm", :type => "video/webm"}/
  / Ogg/Vorbis for older Firefox and Opera versions
  / Optional: Add subtitles for each language
  / %track{:kind => "subtitles", :src => "subtitles.srt", :srclang => "en"}/
  / Optional: Add chapters
  / %track{:kind => "chapters", :src => "chapters.srt", :srclang => "en"}/
  / Flash fallback for non-HTML5 browsers without JavaScript
  %object{:data => "/assets/flashmediaelement.swf", :height => "264", :type => "application/x-shockwave-flash", :width => "435"}
    %param{:name => "movie", :value => "/assets/flashmediaelement.swf"}/
    %param{:name => "flashvars", :value => "controls=true&file=#{attachment.url}"}/
    / Image as a last resort
    %img{:height => "264", :src => "myvideo.jpg", :title => "No video playback capabilities", :width => "435"}

:javascript
  $('video,audio').mediaelementplayer(/* Options */);
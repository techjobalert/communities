.b-popup-user-info.popup-container{:class => "popup-user-#{user.id}"}
  .container
    .user-info
      = image_tag user.avatar_url(:thumb_70), :alt => "#{user.full_name}"
      %span.title= user.full_name
    - if user != current_user
      .tools{:class => "tools-user-#{@user.id}"}
        - if current_user.following?(user)
          = link_to user_unfollow_path(user), :method => :delete, :remote => :true, :class => "light-button follow unfollow follow-user-#{user.id} no-history" do
            Unfollow
            %span
        - else
          = link_to user_follow_path(user), :method => :post, :remote => :true, :class => "light-button follow follow-user-#{user.id} no-history" do
            Follow
            %span

    .panel
      - unless user.specialization.blank?
        %p
          %b Specialization:
          = user.specialization

      - if user != current_user
        %p
          %b Send a message:
          you can send a message directly to email about
          professional question

        = render :partial => 'send_message', :locals => {:user => user}

    - if user.items.state_is("published").present?
      .panel
        %p
          %b Publications:
        .publication-container
          %ul
            - user.items.state_is("published").each do |item|
              %li= link_to item.title.truncate(65, :separator => " "), item_path(item), :class => "publication-item"
    .clear

  %p.right= link_to 'Go to profile', user_path(user), :class => 'pjax light-button go-to-profile'
  .corner
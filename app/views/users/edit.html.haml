  .b-info.b-settings-tab
    = form_for(current_user) do |f|
      .bio
        .title 
          Biography
          %span Tell us more about yourself            
        .body
          = f.text_area :bio

      .bio
        .title 
          Specialization:
          %span Tell us more about your specialization           
        .body
          = f.text_area :specialization
      .form
        %ul
          %li
            - if current_user.avatar.present?
              = image_tag current_user.avatar_url(:thumb_143), :width => '143', :height => '143'
              %br
            = f.label :avatar
            = f.file_field :avatar, :id => 'user-avatar-uploader'
          %li
            = f.label :full_name
            = f.text_field :full_name       
          %li
            = f.label :profession_and_degree
            = f.text_field :profession_and_degree
          %li
            = f.label :birthday
            = f.text_field :birthday, :value => date_format(current_user.birthday), :id => 'datepicker'    
          
          %li.right= f.submit 'OK', :class => 'light-button green'


.b-user
  .b-user-content
    .b-user-info
      .b-user-preview#upcontainer
        = image_tag user.avatar_url(:thumb_143)
        - if user != current_user
          .tools
            - if current_user.following?(user)
              = link_to user_unfollow_path(user), :method => :delete, :remote => :true, :class => "light-button follow unfollow follow-user-#{user.id}" do
                Unfolow
                %span
            - else
              = link_to user_follow_path(user), :method => :post, :remote => :true, :class => "light-button follow follow-user-#{user.id}" do
                Folow
                %span
        
      .b-user-info-body
        %h2.b-user-title= user.full_name
        - unless user.birthday.blank?
          %p
            %strong Birthday:
            = user.birthday
            
        - unless user.profession_and_degree.blank?
          %p
            %strong Profession and degree 
            = user.profession_and_degree       
        
        - unless user.specialization.blank?
          %p
            %strong Specialization:
            = user.specialization
        - if (user != current_user)    
          %p
            %strong Send a massege: 
            you can send a message directly to email about profesional question
          =# render :partial => 'send_message', :locals => {:user => user}

      .clear    
    
    - unless user.bio.blank?
      %h2 Medical Profile
        
      %p
        %strong Biography:
        = user.bio

      %br    

    - if user.items.present?   
      %h2 Publications      
      = render :partial => 'list_of_items', :locals => {:items => user.items}
      %br
     
    - if false 
      %h2 Approvals   
      = render :partial => 'list_of_items', :locals => {:items => user.items}

  = render :partial => 'sidebar', :locals => {:collaborators => collaborators}
.clear
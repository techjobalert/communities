.edu-fields
  %ul.form
    %li
      %strong= f.label :country
      = f.text_field :country

    %li
      %strong= f.label :state
      = f.text_field :state

    %li
      %strong= f.label :city
      = f.text_field :city

    %li
      %strong= f.label :school
      = f.text_field :school, :require => true

    - if removable
      %li.remove
        = link_to_remove_fields "remove", f
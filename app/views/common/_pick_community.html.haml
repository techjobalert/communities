%form

%div.community_menu_container
  %select.community_list{ name: "communities", multiple: true, placeholder: "Pick a community" }
    - @communities.each do |c|
      %option.community_option{ value: c.id }
        = c.name
        -# %img{ src: "/assets/communities/#{c.slug}.png" }

:javascript
  $(main);

  function main(){
    $("select.community_list").dropp({ 
      'class_dropdown_wrapper' : 'communities_dropdown_wrapper' 
    });

    $(".communities_dropdown_wrapper ul li a").each(function(){
      $this = $(this);
      var text = $this.text().trim().toLowerCase();
      $this.addClass(text);
    });


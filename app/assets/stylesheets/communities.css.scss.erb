@mixin hide_text {
  text-indent: 100%;
  white-space: nowrap;
  overflow: hidden;
}

.communities_dropdown_wrapper {
  ul li {
    width: 230px;
    @include hide_text;
    <% #TODO: inspect assets and initialize the list of communities %>
    <% communities = %w(endodontics implants orthodontics periodontics) %>
    <% communities.each do |c| %>
    a.<%= c %> {
      background: url(/assets/communities/<%= c %>.png) no-repeat;
      height: 35px;
      &:hover {
        background: url(/assets/communities/<%= c %>_checked.png) no-repeat;
      };

      &.checked {
        background: url(/assets/communities/<%= c %>_checked.png) no-repeat;
      };
    }

    <% end %>
  }
}


.chzn-container .chzn-drop {
  
  border: none;

  ul.chzn-results {
    width: 230px;
    text-indent: -9999px;  
    <% #TODO: inspect assets and initialize the list of communities %>
    <% communities = %w(endodontics implants orthodontics periodontics) %>
    <% communities.each do |c| %>
    li.<%= c %> {
      background: url(/assets/communities/<%= c %>.png) no-repeat;
      height: 35px;
      &:hover {
        background: url(/assets/communities/<%= c %>_checked.png) no-repeat;
      };
    }
    <% end %>
  }
}

.chzn-container .chzn-results .highlighted {
  background-color: white;
}

@mixin auth_field {
  border: 1px solid #d4dee0;
  border-radius: 4px;
  -moz-border-radius: 4px;
  -webkit-border-radius: 4px;
  padding: 8px;
  width: 210px;
  font-size: 14px;
  -webkit-box-shadow: 0 -2px 1px #837A81;
  -moz-box-shadow: 0 -2px 1px #837A81;
  box-shadow: 0 -2px 1px #837A81;
}

div#pick_community_select_chzn.chzn-container.chzn-container-multi {
  @include auth_field; 
}